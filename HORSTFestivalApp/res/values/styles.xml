<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/HorstActionBarTheme</item>
        <item name="android:panelBackground">#232b62</item>
        <item name="android:popupMenuStyle">@style/HorstPopupMenu</item>
    </style>
    
    <style name="HorstActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#232b62</item>
    </style>

    <style name ="HorstPopupMenu" parent="android:Theme.Holo.Light">
        <item name="android:popupBackground">#232b62</item>
    </style>
    
</resources>
